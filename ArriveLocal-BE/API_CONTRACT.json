{
    "openapi": "3.0.0",
    "info": {
      "title": "ArriveLocal API",
      "version": "1.0.0",
      "description": "API contract for the Hyperlocal Inventory & Delivery System built with MongoDB"
    },
    "paths": {
      "1. AUTH APIs": {
        "/auth/register": {
          "post": {
            "summary": "Register new user/seller/delivery partner",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "email": { "type": "string" },
                      "password": { "type": "string" },
                      "mobile": { "type": "string" },
                      "role": { "type": "string", "enum": ["user", "seller", "delivery_partner"] }
                    },
                    "required": ["email", "password", "role"]
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description": "User registered successfully",
                "content": {
                  "application/json": {
                    "example": {
                      "id": "string",
                      "name": "string",
                      "email": "string",
                      "role": "user"
                    }
                  }
                }
              }
            }
          }
        },
        "/auth/login": {
          "post": {
            "summary": "Login with credentials",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "email": { "type": "string" },
                      "password": { "type": "string" }
                    },
                    "required": ["email", "password"]
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Login successful",
                "content": {
                  "application/json": {
                    "example": {
                      "accessToken": "string",
                      "refreshToken": "string",
                      "role": "user"
                    }
                  }
                }
              }
            }
          }
        },
        "/auth/logout": {
          "post": {
            "summary": "Logout user",
            "responses": {
              "200": {
                "description": "Logged out successfully",
                "content": {
                  "application/json": {
                    "example": { "message": "Logged out successfully" }
                  }
                }
              }
            }
          }
        },
        "/auth/refresh": {
          "post": {
            "summary": "Refresh access token",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "refreshToken": { "type": "string" }
                    },
                    "required": ["refreshToken"]
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "New access token",
                "content": {
                  "application/json": {
                    "example": {
                      "accessToken": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "/auth/me": {
          "get": {
            "summary": "Get current user profile",
            "description": "Retrieve the authenticated user's profile information. Requires valid access token in Authorization header.",
            "security": [
              {
                "bearerAuth": []
              }
            ],
            "responses": {
              "200": {
                "description": "User profile retrieved successfully",
                "content": {
                  "application/json": {
                    "example": {
                      "message": "User profile retrieved successfully",
                      "user": {
                        "id": "string",
                        "name": "string",
                        "email": "string",
                        "mobile": "string",
                        "role": "user",
                        "createdAt": "2024-01-01T00:00:00.000Z",
                        "updatedAt": "2024-01-01T00:00:00.000Z",
                        "addresses": []
                      }
                    }
                  }
                }
              },
              "401": {
                "description": "Authentication required",
                "content": {
                  "application/json": {
                    "example": {
                      "error": "Access token required",
                      "message": "Please provide a valid access token in Authorization header"
                    }
                  }
                }
              },
              "404": {
                "description": "User not found",
                "content": {
                  "application/json": {
                    "example": {
                      "error": "User not found",
                      "message": "User profile not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
  
      "2. USER APIs": {
        "/users/me": {
          "get": {
            "summary": "Get current user profile",
            "responses": {
              "200": {
                "description": "User profile",
                "content": {
                  "application/json": {
                    "example": {
                      "id": "string",
                      "name": "string",
                      "email": "string",
                      "mobile": "string",
                      "role": "user",
                      "addresses": [
                        {
                          "id": "string",
                          "address_line": "string",
                          "lat_lng": "string",
                          "type": "home"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "/users/{id}": {
          "get": {
            "summary": "Get user by ID",
            "parameters": [
              { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
            ],
            "responses": {
              "200": {
                "description": "User details"
              }
            }
          }
        }
      },
  
      "3. PRODUCT APIs": {
        "/products": {
          "post": {
            "summary": "Create a new product (seller only)",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "description": { "type": "string" },
                      "price": { "type": "number" },
                      "category": { "type": "string" },
                      "stock": { "type": "number" }
                    },
                    "required": ["name", "price", "category"]
                  }
                }
              }
            },
            "responses": {
              "201": { "description": "Product created" }
            }
          },
          "get": {
            "summary": "List all products",
            "responses": {
              "200": { "description": "List of products" }
            }
          }
        },
        "/products/{id}": {
          "get": {
            "summary": "Get product by ID"
          },
          "put": {
            "summary": "Update product (seller only)"
          },
          "delete": {
            "summary": "Delete product (seller only)"
          }
        }
      },
  
      "4. ORDER APIs": {
        "/orders": {
          "post": {
            "summary": "Place a new order (user)"
          },
          "get": {
            "summary": "List orders (user or seller)"
          }
        },
        "/orders/{id}": {
          "get": { "summary": "Get order details by ID" },
          "put": { "summary": "Update order status (seller/delivery)" }
        }
      },
  
      "5. DELIVERY APIs": {
        "/delivery-partners/available": {
          "get": {
            "summary": "List available delivery partners near location"
          }
        },
        "/delivery/{orderId}/assign": {
          "post": {
            "summary": "Assign delivery partner to order"
          }
        },
        "/delivery/{orderId}/status": {
          "put": {
            "summary": "Update delivery status"
          }
        }
      },
  
      "6. INVENTORY APIs": {
        "/inventory/{productId}/update": {
          "put": {
            "summary": "Update product stock in seller's inventory"
          }
        },
        "/inventory/{productId}/check": {
          "get": {
            "summary": "Check stock availability for a product"
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  }
